react.wednesday1991.duckdns.org {
    # PENTING: Ganti /absolute/path/to/your/project dengan path asli di server Anda
    # Contoh: /home/ubuntu/ReactApp/client/dist
    root * /path/to/your/ReactApp/client/dist

    # 1. Handle API requests (Proxy to Backend)
    handle /api/* {
        reverse_proxy localhost:5000
    }

    # 2. Handle Frontend requests (Static Files + SPA)
    handle {
        # Serve static files if they exist
        file_server
        
        # If file doesn't exist, rewrite to index.html (SPA)
        try_files {path} /index.html
    }
}
