react.wednesday1991.duckdns.org {
    # PENTING: Ganti /absolute/path/to/your/project dengan path asli di server Anda
    # Contoh: /home/ubuntu/ReactApp/client/dist
    root * /path/to/your/ReactApp/client/dist
    
    # Serve static files
    file_server
    
    # SPA routing (redirect unknown paths to index.html)
    try_files {path} /index.html

    # Reverse proxy API requests to backend
    reverse_proxy /api/* localhost:5000
}
